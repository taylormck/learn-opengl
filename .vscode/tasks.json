{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "never",
        "revealProblems": "onProblem",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false,
        "close": true,
    },
    "tasks": [
        {
            "label": "Run application",
            "type": "shell",
            "command": "bin/app",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Build - Release"
            ],
            "presentation": {
                "close": true
            }
        },
        {
            "label": "Build - Release",
            "type": "shell",
            "command": "odin build src -o:speed -out:bin/app",
            "dependsOn": [
                "Create build directory"
            ]
        },
        {
            "label": "Build - Debug",
            "type": "shell",
            "command": "odin build src -debug -out:bin/app",
            "dependsOn": [
                "Create build directory"
            ]
        },
        {
            "label": "Create build directory",
            "type": "shell",
            "linux": {
                "command": "mkdir -p bin"
            },
        },
        {
            "label": "Run unit tests",
            "type": "shell",
            "command": "bin/test",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Build unit tests"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Build unit tests",
            "type": "shell",
            "command": "odin build src -out:bin/test -build-mode:test -debug --all-packages",
            "dependsOn": [
                "Create build directory"
            ]
        }
    ]
}